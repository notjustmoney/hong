  "eslintConfig": {
    "env": {
      "node": true,
      "jest": true
    },
    "extends": [
      "airbnb-base",
      "plugin:prettier/recommended",
      "plugin:jest/recommended",
      "plugin:security/recommended"
    ],
    "plugins": [
      "prettier",
      "jest",
      "security"
    ],
    "parserOptions": {
      "ecmaVersion": 2018
    },
    "rules": {
      "linebreak-style": 0,
      "no-console": "off",
      "func-names": "off",
      "no-underscore-dangle": "off",
      "consistent-return": "off",
      "jest/expect-expect": "off",
      "security/detect-object-injection": "off"
    }
  }
